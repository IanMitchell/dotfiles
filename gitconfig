[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[core]
	pager = delta

[delta]
	plus-style = "syntax #012800"
	minus-style = "normal #340001"
	syntax-theme = Monokai Extended
	side-by-side = true

[interactive]
	diffFilter = delta --color-only

[init]
	defaultBranch = main

[pull]
	rebase = true

[diff]
	colorMoved = zebra
